
IF os=="windows"
    output.file.name=libutils.dll
ENDIF
IF os!="windows"
    output.file.name=libutils.so
ENDIF

src.dir=src
bin.dir=bin/Release
obj.dir=obj/Release

IF os == "windows"
    compiler.params=-Wall -O2 -std=c++17
ENDIF
IF os != "windows"
    compiler.params=-Wall -O2 -std=c++17 -fPIC
ENDIF

linker.params=-s

IF os == "windows"
	defines=BUILDING_DLL
ENDIF